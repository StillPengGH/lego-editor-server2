{
  "name": "lego-editor-server",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "node bin/www",
    "dev": "cross-env NODE_ENV=dev ./node_modules/.bin/nodemon bin/www",
    "prd": "pm2 start bin/www",
    "prd-dev": "cross-env NODE_ENV=prd-dev pm2 start bin/pm2-prd-dev.config.js",
    "test:local": "cross-env NODE_ENV=test_local jest --runInBand --passWithNoTests --colors --forceExit",
    "test:remote": "cross-env NODE_ENV=test_remote jest --runInBand --passWithNoTests --colors --forceExit",
    "lint": "eslint \"src/**/*.{js,ts}\"",
    "lint-fix": "eslint --fix \"src/**/*.{js,ts}\"",
    "lint-fix-bin": "eslint --fix \"bin/**/*.*\""
  },
  "dependencies": {
    "axios": "^0.24.0",
    "cross-env": "^7.0.3",
    "debug": "^4.1.1",
    "jsonwebtoken": "^8.5.1",
    "koa": "^2.7.0",
    "koa-bodyparser": "^4.2.1",
    "koa-convert": "^1.2.0",
    "koa-json": "^2.0.2",
    "koa-jwt": "^4.0.3",
    "koa-logger": "^3.2.0",
    "koa-onerror": "^4.1.0",
    "koa-router": "^7.4.0",
    "koa-static": "^5.0.0",
    "koa-views": "^6.2.0",
    "mongoose": "^6.0.12",
    "mysql2": "^2.3.3-rc.0",
    "pug": "^2.0.3",
    "redis": "^3.1.2",
    "require-all": "^3.0.0",
    "sequelize": "^6.9.0",
    "simple-git": "^2.47.0",
    "supertest": "^6.1.6"
  },
  "devDependencies": {
    "@types/jest": "^27.0.3",
    "commitlint": "^15.0.0",
    "commitlint-config-cz": "^0.13.2",
    "cz-customizable": "^6.3.0",
    "eslint": "^8.3.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-vue": "^8.1.1",
    "husky": "^4.3.8",
    "jest": "^27.3.1",
    "lint-staged": "^12.1.2",
    "nodemon": "^1.19.1",
    "prettier": "^2.5.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run lint",
      "npm run test:local"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    }
  }
}
